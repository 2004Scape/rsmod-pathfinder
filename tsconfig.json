{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}